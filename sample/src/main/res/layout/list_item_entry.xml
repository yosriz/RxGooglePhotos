<?xml version="1.0" encoding="utf-8"?>
<com.yosriz.picasaclientsample.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?selectableItemBackground"
    android:theme="@style/Theme.AppCompat"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/titleFrame"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#BF000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/subtitle"
            android:layout_toStartOf="@+id/subtitle"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            tools:text="Content" />


        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"
            tools:text="Sub-content" />

    </RelativeLayout>

</com.yosriz.picasaclientsample.SquareFrameLayout>